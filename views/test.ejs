<!doctype html>
<html lang="en">
 <head>
    <style>
      .centerContent
      {
        display: flex;
        align-items: center;
        flex-direction: column;
      }

    </style>
 </head>
 <body>
  <div class="centerContent">
   <h1 id="product"><%= myMessage %></h1>
   <h2>Model: <%=model %></h2>
   <h2 id="price"><%= myPrice %></h2>
   <img src="images/<%= myImage%>" width="375px">
    <br>
    <select id="quantity" name="quantity">
      <option value="0">0</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
      <option value="6">6</option>
    </select>
   <button onclick="addToCart()">Add to Cart</button>
    <br>
   <a href="shop.html">Back to Shop Page</a>
  </div>
 </body>
</html>

<script>
function addToCart() 
{
  //Product is stored in product when the user selects the product
  let product = document.getElementById("product").innerHTML;
  let quantity = document.getElementById("quantity").value;
  let price = document.getElementById("price").innerHTML;
  let quan_price = {p: price, quan: quantity};
  //localStorage.test = product;
  localStorage.setItem(product, JSON.stringify(quan_price));
}

</script>